{% extends 'base.html.twig' %}

{% block title %}Welcome to Your Dashboard{% endblock %}

{% block body %}
<style>
    /* Global styles */
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f9f9f9;
        color: #333;
        margin: 0;
        padding: 0;
    }

    /* Container */
    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 30px;
    }

    /* Header */
    .header {
        background-color: #4c6ef5;
        color: white;
        padding: 20px;
        border-radius: 8px;
        text-align: center;
    }

    .header h1 {
        font-size: 2.5rem;
        margin-bottom: 10px;
    }

    /* User Info */
    .user-info {
        background-color: white;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        margin-top: 30px;
        padding: 30px;
    }

    .user-info h2 {
        color: #4c6ef5;
        font-size: 1.8rem;
        margin-bottom: 20px;
    }

    .user-info p {
        font-size: 1.1rem;
        line-height: 1.6;
    }

    .user-info ul {
        list-style-type: none;
        padding: 0;
    }

    .user-info ul li {
        font-size: 1.1rem;
        margin-bottom: 10px;
    }

    /* Button */
    .btn {
        background-color: #4c6ef5;
        color: white;
        padding: 12px 20px;
        border: none;
        border-radius: 5px;
        font-size: 1rem;
        cursor: pointer;
        transition: background-color 0.3s;
    }

    .btn:hover {
        background-color: #3a5bb3;
    }
</style>

<div class="container">
    <!-- Header Section -->
    <div class="header">
        <h1>Welcome, {{ email }}!</h1>
        <p>We're glad to have you here. Below is your profile information.</p>
    </div>

    <!-- User Information Section -->
    <div class="user-info">
        <h2>Your Profile Information</h2>
        <p><strong>Email:</strong> {{ email }}</p>
        <p><strong>Roles:</strong></p>
        <ul>
            {% for role in roles %}
                <li>{{ role }}</li>
            {% endfor %}
        </ul>
        
        <button class="btn" onclick="window.location.href='/logout'">Log out</button>
    </div>
</div>

{% endblock %}
