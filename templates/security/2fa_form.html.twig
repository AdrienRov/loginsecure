{% extends 'base.html.twig' %}
{% block title %}Two-Factor Authentication{% endblock %}
{% block body %}
<div class="container">
    <div class="two-factor-container">
        <h1>Authentication Code</h1>
        <p class="description">Entrez le code à 6 chiffres que vous avez reçu par e-mail.</p>
        
        <form class="form" action="{{ path('2fa_login_check') }}" method="post">
            <div class="form-group">
                <label for="_auth_code">Code d'authentification</label>
                <input 
                    id="_auth_code" 
                    type="text" 
                    name="_auth_code" 
                    autocomplete="one-time-code" 
                    autofocus 
                    class="form-control"
                    placeholder="000000"
                >
            </div>
            
            <button type="submit" class="btn btn-primary">
                Vérifier
            </button>
        </form>
        
        <div class="cancel-link">
            <a href="{{ path('app_logout') }}">Annuler</a>
        </div>
    </div>
</div>

<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f0f4f8;
        color: #333;
        margin: 0;
        min-height: 100vh;
    }

    .container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        padding: 1rem;
    }

    .two-factor-container {
        background: #fff;
        padding: 2.5rem;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 400px;
    }

    h1 {
        color: #4c6ef5;
        font-size: 1.8rem;
        font-weight: 600;
        text-align: center;
        margin: 0 0 1rem;
    }

    .description {
        color: #666;
        text-align: center;
        margin-bottom: 1.5rem;
        font-size: 0.95rem;
        line-height: 1.5;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    label {
        display: block;
        margin-bottom: 0.5rem;
        color: #555;
        font-weight: 500;
        font-size: 0.95rem;
    }

    .form-control {
        width: 100%;
        padding: 0.75rem;
        border: 1px solid #ddd;
        border-radius: 5px;
        font-size: 1rem;
        transition: all 0.3s ease;
        box-sizing: border-box;
    }

    .form-control:focus {
        border-color: #4c6ef5;
        box-shadow: 0 0 0 2px rgba(76, 110, 245, 0.1);
        outline: none;
    }

    .btn {
        width: 100%;
        padding: 0.75rem;
        font-size: 1rem;
        font-weight: 500;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .btn-primary {
        background-color: #4c6ef5;
        color: white;
    }

    .btn-primary:hover {
        background-color: #3a5bb3;
        transform: translateY(-1px);
    }

    .btn-primary:active {
        transform: translateY(0);
    }

    .cancel-link {
        text-align: center;
        margin-top: 1.5rem;
    }

    .cancel-link a {
        color: #666;
        text-decoration: none;
        font-size: 0.9rem;
        transition: color 0.3s ease;
    }

    .cancel-link a:hover {
        color: #4c6ef5;
        text-decoration: underline;
    }

    @media (max-width: 480px) {
        .two-factor-container {
            padding: 1.5rem;
        }
    }
</style>
{% endblock %}